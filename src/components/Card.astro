---
const { title, image, imageAttribution } = Astro.props;
---
<div class="card">
  {image && (
    <div class="card-image">
        <figure class="image is-16by9">
          <img width={1020} height={510} src={image} alt={imageAttribution} />
        </figure>
    </div>
  )}
  <div class="card-content">
    <div class="content">
      <h3>{title}</h3>
      <slot />
    </div>
  </div>
</div>