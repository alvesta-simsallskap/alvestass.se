---
import { title as TITLE } from '../config/site.json';
import { tagline as TAGLINE } from '../config/site.json';

import "@fontsource/material-symbols-rounded/300.css"; 
---

<section id="start" class="hero is-halfheight has-background" x-ref="start">
  <img alt="Fill Murray" class="hero-background is-transparent" src="bg.jpg" />
  <div class="hero-body">
    <div class="container is-max-desktop">
      <div class="columns">
        <div class="column is-6">
          <h1 class="title is-2">{TITLE}</h1>
          <h3 class="subtitle is-5">{TAGLINE}</h3>
        </div>
        <div class="column is-6">
          <div class="box">
            <div class="content has-text-grey-dark">
              <h5 class="has-text-grey">
                <span class="icon-text">
                  <span class="icon">
                    <i class="material-symbols-rounded is-size-5 has-text-warning-00-invert has-text-weight-bold">info</i>
                  </span>
                  <span>Information</span>
                </span>                
              </h5>
              <p>
                Bokning vårterminen 2026 öppnar 4 december (förtur) och 8 december (alla).
              </p>
              <h5 class="has-text-grey">
                <span class="icon-text">
                  <span class="icon">
                    <i class="material-symbols-rounded is-size-5 has-text-link-00-invert has-text-weight-bold">event</i>
                  </span>
                  <span>Kalender</span>
                </span>                
              </h5>
              <p>
                8-9 november. ÖGP, Kalmar<br>
                29 november. Utmanaren, Alvesta<br>
                4 december. Höstsimiaden, Värnamo
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>